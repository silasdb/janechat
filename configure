#!/bin/sh
set -eu

>config.mk

# TODO: use pkg-config or curl-config?
cat >>config.mk <<-EOF
	LDFLAGS += $(pkg-config --libs libcurl)
	CFLAGS += $(pkg-config --cflags libcurl)
EOF

cat >>config.mk <<-EOF
	LDFLAGS += $(pkg-config --libs jansson)
	CFLAGS += $(pkg-config --cflags jansson)
EOF

# TODO: At this time, there is still some incompatibility between ncurses and
# NetBSD curses that we need to address later.
# TODO: add a flag to choose a different curses lib?
if pkg-config ncurses; then
	cat >>config.mk <<-EOF
		LDFLAGS += $(pkg-config --libs ncurses)
	EOF
else
	cat >>config.mk <<-EOF
		LDFLAGS += -lcurses
	EOF
fi
